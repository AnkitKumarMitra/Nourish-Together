<%- include("partials/header.ejs") %>

<div class="container mt-5">
    <h2 class="text-center mb-4">Food Delivery Jobs</h2>

    <% jobs.forEach(job => { %>
        <div class="card mb-3" id="job-<%= job.id %>">
            <div class="card-body">
                <h5 class="card-title">Pick-Up Address</h5>
                <p class="card-text"><%= job.pickup_address %></p>

                <h5 class="card-title">Delivery Address</h5>
                <p class="card-text"><%= job.delivery_address %></p>

                <h5 class="card-title">Item Count</h5>
                <p class="card-text"><%= job.item_count %> items</p>

                <div class="row mt-3">
                    <div class="col-md-6">
                        <a href="/accept/<%= job.id %>" class="btn btn-success w-100">Accept</a>
                    </div>
                    <div class="col-md-6">
                        <button class="btn btn-danger w-100 reject-btn" data-job-id="<%= job.id %>">Reject</button>
                    </div>
                </div>
            </div>
        </div>
    <% }); %>
</div>

<%- include("partials/footer.ejs") %>

<script>
    document.addEventListener('DOMContentLoaded', () => {
        const rejectButtons = document.querySelectorAll('.reject-btn');

        rejectButtons.forEach(button => {
            button.addEventListener('click', () => {
                const jobId = button.dataset.jobId;
                
                // Delete the job row from the DOM
                const jobRow = document.getElementById(`job-${jobId}`);
                if (jobRow) {
                    jobRow.remove();
                }
            });
        });
    });
</script>
