<%- include("partials/header.ejs") %>

    <div class="container">
        <h2 class="mb-4">Food Donation Form</h2>
        <form id="foodForm" action="/donate" method="POST">
            <div class="mb-3">
                <label for="name" class="form-label">Name</label>
                <input type="text" class="form-control" id="name" name="name" required>
            </div>

            <div class="mb-3">
                <label for="address" class="form-label">Address</label>
                <textarea class="form-control" id="address" name="address" rows="3" required></textarea>
            </div>

            <div class="food-details">
                <div class="mb-3">
                    <label class="form-label">Food Details</label>
                    <div class="input-group">
                        <input type="text" class="form-control" name="foodName[]" placeholder="Food Name" required>
                        <input type="number" class="form-control" name="quantity[]" placeholder="Quantity" required>
                        <button type="button" class="btn btn-success add-row"><i class="fas fa-plus"></i></button>
                    </div>
                </div>
            </div>

            <div class="mb-3">
                <label for="contact" class="form-label">Contact</label>
                <input type="tel" class="form-control" id="contact" name="contact" required>
            </div>

            <div class="text-center">
                <button type="submit" class="btn btn-primary">Submit</button>
            </div>
        </form>
    </div>

    <script src="scripts/donor.js"></script>
    <%- include("partials/footer.ejs") %>